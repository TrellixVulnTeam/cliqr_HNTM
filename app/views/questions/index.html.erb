

<!DOCTYPE html>
<html>

<body>



<h2>
<%= link_to "Add new Question", "questions/new" %>
</h2>
<% @questions.each do |question| %>

	<table class='qTable'>
	<td>
    <%= form_for @vote, {url: question_votes_path(question) } do |f| %>
      <%= f.hidden_field :vote_type, value: 'upvote' %>
		<button id="upvote" type="submit" class="btn btn-success btn-sm btn-upvote"><div style="font-size:1.5em"<b>^</b></div></button>
  <% end %>
	<br>
		<%= question.upvote - question.downvote %>
	<br>

  <%= form_for @vote, {url: question_votes_path(question) } do |f| %>
    <%= f.hidden_field :vote_type, value: 'downvote' %>
		<button id="downvote" type="submit" class="btn btn-danger btn-sm"><div style="font-size:1.5em"<b>v</b></div></button>
  <% end %>
	</td>
	<td>
		<%= link_to question.text, "/questions/#{question.id}" %>
	</td>
	</table>
	<table class='aTable'>
	<% question.answers.order('upvote - downvote DESC').each do |answer| %>
	<tr>
		<td>
      <%= form_for @vote, {url: answer_votes_path(answer) } do |f| %>
        <%= f.hidden_field :vote_type, value: 'upvote' %>
			<button id="upvote" type="submit" class="btn btn-success btn-sm btn-upvote"><div style="font-size:1.25em"<b>^</b></div></button>
    <% end %>
			<br>
			<%= answer.upvote - answer.downvote %>
			<br>
      <%= form_for @vote, {url: answer_votes_path(answer) } do |f| %>
        <%= f.hidden_field :vote_type, value: 'downvote' %>
			<button id="downvote" type="submit" class="btn btn-danger btn-sm"><div style="font-size:1.25em"<b>v</b></div></button>
    <% end %>
		</td>
		<td>
			<%= answer.text %>
		</td>
	</tr>
		<% end %>
<% end %>




<style>
	.qTable{
	font-size:1.5em;
	margin-left:.5em;
	}
	.aTable {
	margin-left:5em;
	font-size:1.25em;
	}
</style>

<script>
  $('#upvote').click(function(){
  	console.log("upvote clicked")
  });

  $('#downvote').click(function(){
  	console.log("downvote clicked")
  });

</script>
</body>
</html>
